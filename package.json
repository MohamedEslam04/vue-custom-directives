{
  "name": "@mohamedeslam04/vue-custom-directives",
  "version": "1.0.3",
  "type": "module",
  "description": "A comprehensive collection of Vue 3 custom directives for enhanced user interactions",
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "vue",
    "directives",
    "vue3",
    "custom-directives",
    "typescript",
    "ui",
    "interaction",
    "copy",
    "debounce",
    "lazy-loading",
    "longpress",
    "permissions",
    "resize",
    "scroll",
    "tooltip"
  ],
  "author": {
    "name": "Mohamed Eslam",
    "email": "mohamed@example.com",
    "url": "https://github.com/mohamedeslam04"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mohamedeslam04/vue-custom-directives.git"
  },
  "bugs": {
    "url": "https://github.com/mohamedeslam04/vue-custom-directives/issues"
  },
  "homepage": "https://github.com/mohamedeslam04/vue-custom-directives#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build-only",
    "build-only": "vite build && npm run generate-types",
    "generate-types": "vue-tsc --declaration --emitDeclarationOnly --outDir dist",
    "type-check": "vue-tsc --build --force",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "prepublishOnly": "npm run build && npm run test:coverage",
    "release": "semantic-release",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md"
  },
  "dependencies": {
    "pinia": "^2.1.7"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@tsconfig/node22": "^22.0.1",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.5.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.22.0",
    "eslint-plugin-vue": "~10.0.0",
    "happy-dom": "^15.11.6",
    "jiti": "^2.4.2",
    "npm-run-all2": "^7.0.2",
    "prettier": "3.5.3",
    "semantic-release": "^24.2.0",
    "terser": "^5.29.2",
    "typescript": "^5.8.3",
    "vite": "^5.0.0",
    "vite-plugin-vue-devtools": "^7.7.2",
    "vitest": "^1.0.0",
    "vue": "^3.4.21",
    "vue-tsc": "^2.2.8"
  },
  "volta": {
    "node": "22.16.0",
    "npm": "11.4.1"
  }
}
