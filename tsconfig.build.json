// tsconfig.build.json
{
    "extends": "./tsconfig.app.json",
    "include": [ "src" ],
    "exclude": [ "node_modules", "**/__tests__/*" ],
    "compilerOptions": {
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "dist",
        "composite": false,
        "skipLibCheck": true,
        "paths": {
            "@/*": [ "./src/*" ]
        }
    }
}
